<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC  
 "-//Hibernate/Hibernate Mapping DTD 5.3//EN"  
 "http://hibernate.sourceforge.net/hibernate-mapping-5.3.dtd">

<hibernate-mapping>
	<class name="Entity.Employee" table="employees">
		<id name="employeeId" column="employee_id">
			<generator class="increment"></generator>
		</id>
		
		<property name="registrationNumber" column="registration_number"></property>
		<property name="employeeName" column="employee_name"></property>
		<property name="sectionId" column="section_id"></property>
	</class>

</hibernate-mapping>